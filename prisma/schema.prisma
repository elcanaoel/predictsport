generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model League {
  id        Int      @id
  name      String
  country   String
  logo      String?
  flag      String?
  season    Int
  matches   Match[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Team {
  id           Int      @id
  name         String
  logo         String?
  homeMatches  Match[]  @relation("HomeTeam")
  awayMatches  Match[]  @relation("AwayTeam")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Match {
  id              Int          @id @default(autoincrement())
  fixtureId       Int          @unique
  leagueId        Int
  league          League       @relation(fields: [leagueId], references: [id])
  homeTeamId      Int
  homeTeam        Team         @relation("HomeTeam", fields: [homeTeamId], references: [id])
  awayTeamId      Int
  awayTeam        Team         @relation("AwayTeam", fields: [awayTeamId], references: [id])
  matchDate       DateTime
  status          String
  homeScore       Int?
  awayScore       Int?
  venue           String?
  round           String?
  predictions     Prediction[]
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

model Prediction {
  id              Int      @id @default(autoincrement())
  matchId         Int
  match           Match    @relation(fields: [matchId], references: [id])
  predictionType  String   // "1X2", "OVER_UNDER", "BTTS", "DOUBLE_CHANCE"
  prediction      String   // "HOME", "DRAW", "AWAY", "OVER_2.5", "UNDER_2.5", "YES", "NO"
  confidence      Int      // 1-100
  odds            Float?
  analysis        String?
  result          String?  // "WON", "LOST", "PENDING"
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Statistics {
  id              Int      @id @default(autoincrement())
  date            DateTime @unique
  totalPredictions Int     @default(0)
  wonPredictions  Int      @default(0)
  lostPredictions Int      @default(0)
  pendingPredictions Int  @default(0)
  winRate         Float    @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
